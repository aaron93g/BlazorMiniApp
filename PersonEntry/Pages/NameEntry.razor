@page "/NameEntry"
<PageTitle>Name Entry</PageTitle>

<h3>Name Entry</h3>


<EditForm Model="person" OnValidSubmit="ValidSubmission" >
    <DataAnnotationsValidator/>
    <ValidationSummary/>

    <div>
        <label for="person" class="form-label" >@nameof(person.FirstName)</label>
        <InputText id="person" class="form-control-sm" @bind-Value = "person.FirstName"></InputText>
    </div>
    <div>
        <label for="person" class="form-label" >@nameof(person.LastName)</label>
        <InputText id="person" @bind-Value="person.LastName" class="form-control-sm"></InputText>
    </div>

    <button class="btn btn-primary" type="submit">Submit</button>

</EditForm>


<ul>
    @foreach (PersonModel name in people)
    {
        <li>
            @name.FullName
        </li>
    }
</ul>




@code {
    private PersonModel person = new();
    private List<PersonModel> people = new();

    private void ValidSubmission()
    {
        people.Add(person);
        person = new();
    }
}
